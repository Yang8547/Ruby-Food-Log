
<%# <% puts @entries.inspect %>
<div class="columns mt-6 is-centered">
    <div class="column is-half">
        <% @entries.each do |day, entries|%>
            <h3 class="is-size-4 has-text-weight-bold mb-4 has-text-centered">
            Entries for <%= day%>
            </h3>
            <nav class="level is-mobile">
                <div class="level-item has-text-centered">
                    <div>
                        <p class="heading">Calories</p>
                        <p class="title"><%= entries.pluck(:calories).sum%></p>
                    </div>
                </div>
                <div class="level-item has-text-centered">
                    <div>
                        <p class="heading">Proteins</p>
                        <p class="title"><%= entries.pluck(:proteins).sum%></p>
                    </div>
                </div>
                <div class="level-item has-text-centered">
                    <div>
                        <p class="heading">Carbohydrates</p>
                        <p class="title"><%= entries.pluck(:carbohydrates).sum%></p>
                    </div>
                </div>
                <div class="level-item has-text-centered">
                    <div>
                        <p class="heading">Fats</p>
                        <p class="title"><%= entries.pluck(:fats).sum%></p>
                    </div>
                </div>
            </nav>
            <% entries.each do |entry|%>
                <%= link_to entry_path(entry) do%>
                    <div class="card">
                        <div class="card-content">
                            <strong><%= entry.meal_type%>
                            <%= " - " + entry.category.title if entry.category.present?%>
                            </strong>
                            <br/>
                            <%= entry.calories%> calories,
                            <%= entry.proteins%>g protein,
                            <%= entry.carbohydrates%>g carbs,
                            <%= entry.fats%>g fat
                        </div>
                    </div>
                <% end %>
            <% end %>
        <% end %>
    </div>
</div>